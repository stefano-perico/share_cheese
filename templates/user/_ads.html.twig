    <div class="row">
        <h2>Toutes mes annonces</h2>
    </div>
    {% for ad in app.user.ads %}
    <div class="col s12 m6">
        <div class="card">
            <div class="card-image">
                {% if ad.cheese.image is empty %}
                <img src="{{ asset('images/cheese/default.png') }}">
                {% else %}
                <img src="{{ ad.cheese.image }}">
                {% endif %}
            </div>
            <div class="card-content">
                <span class="card-title">Echange de {{ ad.cheese.name }}</span>
                <p>Par {{ ad.user.firstName }}</p>
                <p>{{ ad.description }}</p>
            </div>
            <div class="card-action">
                <a href="{{ path('ad_show', {id: ad.id}) }}" class="waves-effect waves-light btn-small"><i class="material-icons left">subject</i>voir</a>
            </div>
        </div>
    </div>
    {% else %}
    <div class="row">
        <p>No records found</p>
    </div>
    {% endfor %}
