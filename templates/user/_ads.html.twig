    <div class="row">
        <h1>Toutes mes annonces</h1>
    </div>

    {% for ad in app.user.ads %}
    <div class="row">
        <div class="col s12 m6">
            <div class="card">
                <div class="card-image">
                    <span class="new badge left card-badge" data-badge-caption="{{ ad.status }}"></span>
                    {% if ad.cheese.image is empty %}
                    <img src="{{ asset('images/cheese/default.png') }}">
                    {% else %}
                    <img src="{{ ad.cheese.image }}">
                    {% endif %}
                </div>
                <div class="card-content">
                    <span class="card-title">Echange de {{ ad.cheese.name }}</span>
                    <p>Par {{ ad.user.firstName }}</p>
                    <p>{{ ad.description }}</p>
                </div>
                <div class="card-action">
                    <a href="{{ path('exchange_new', {id: ad.id}) }}" class="waves-effect waves-light btn-small"><i class="material-icons left">shopping_basket</i>Ã©changez</a>
                </div>
            </div>
        </div>
    </div>
    {% else %}
    <div class="row">
        <p>No records found</p>
    </div>
    {% endfor %}
