
    <div class="row">
        <h2>Mes échanges en cours</h2>
    </div>

    <div class="row">
        <table class="striped">
            <thead>
                <tr>
                    <th>Mon fromage</th>
                    <th>Utilisateur échangeur</th>
                    <th>Son fromage</th>
                    <th>Date de proposition</th>
                    <th>Date de fin</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for createdExchange in app.user.createdExchanges %}
                <tr>
                    <td>{{ createdExchange.ad.cheese.name }}</td>
                    <td>{{ createdExchange.applicant.firstName }} {{ createdExchange.applicant.lastName }}</td>
                    <td>{{ createdExchange.cheeseGiven.name }}</td>
                    <td>{{ createdExchange.dateProposed ? createdExchange.dateProposed|date('d/m/Y') : '' }}</td>
                    <td>{{ createdExchange.ad.startDate ? createdExchange.ad.startDate|date('d/m/Y') : '' }}</td>
                    <td><span class="new badge" data-badge-caption="{{ createdExchange.status }}"></span></td>
                    <td>
                        <a href="{{ path('exchange_show', {id: createdExchange.id}) }}" class="btn-floating btn-small waves-effect waves-light blue"><i class="material-icons">notes</i></a>
                        <a href="{{ path('exchange_edit', {id: createdExchange.id}) }}" class="btn-floating btn-small waves-effect waves-light blue"><i class="material-icons">create</i></a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="7">Pas d'échange en cours</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
