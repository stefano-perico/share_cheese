{% extends 'base.html.twig' %}

{% block title %}Utilisateurs en base de données{% endblock %}

{% block body %}
<div class="row">
    <h1>Utilisateurs en base de données</h1>
</div>

<div class="row">
    <table class="table highlight responsive striped">
        <thead>
            <tr>
                <th>Pseudo</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Nombre d'annonces postées</th>
                <th>Nombre d'échanges demandés</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.pseudo }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.ads|length }}</td>
                <td>{{ user.createdExchanges|length }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

