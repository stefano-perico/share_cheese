
    <div class="row">
        <h2>Tous mes échanges</h2>
    </div>
        {% for createdExchange in app.user.createdExchanges %}
            <div class="col s12 m6">
                <div class="card">
                    <div class="card-image">
                        <span class="new badge left card-badge" data-badge-caption="{{ createdExchange.status }}"></span>
                        {% if createdExchange.ad.cheese.image is empty %}
                        <img src="{{ asset('images/cheese/default.png') }}">
                        {% else %}
                        <img src="{{ createdExchange.ad.cheese.image }}">
                        {% endif %}
                    </div>
                    <div class="card-content">
                        <span class="card-title">Echange de {{ createdExchange.ad.cheese.name }}</span>
                        <p>Par {{ app.user.firstName }}</p>
                        <p>Proposé le {{ createdExchange.dateProposed ? createdExchange.dateProposed|date('d/m/Y') : '' }}</p>
                    </div>
                    <div class="card-action">
                        <a href="{{ path('exchange_show', {id: createdExchange.ad.id}) }}" class="waves-effect waves-light btn-small"><i class="material-icons left">subject</i>voir</a>
                    </div>
                </div>
            </div>
        {% else %}
        <div class="row">
            <p>Pas d'échange trouvé</p>
        </div>
        {% endfor %}
